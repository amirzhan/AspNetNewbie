
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Authorization</h2>
<div class="auth-container">
    <div class="auth-table">
        <form action="login" method="post">
            <input type="email" name="email" placeholder="Email" class="form-label"/>
            <input type="password" name="password" placeholder="Password" class="form-label"/>
            <input type="submit" value="Sign in" class="form-button"/>
         </form>
    </div>
</div>
<style>
    .form-label {
        display: block;
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #0c0c0c;
        border-radius: 3px;
    }
    .form-label:hover {
        border: 1px solid #0094ff;
    }
    .form-button {
        padding: 8px 15px;
        border: none;
        background-color: #0094ff;
        border-radius: 5px;
        color: #fff;
        border-bottom: 3px solid #fff;
    }
    .form-button:active {
        transform: translateY(2px);
        border-bottom: 1px solid #fff;
    }
    .d-flex {
        display: flex;
    }
    .justify-content {
        justify-content: center;
    }
    .auth-container {
        position: relative;
        width: 100%;
        height: 400px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .auth-table {
        background-color: rgba(31, 241, 105, 0.5);
        padding: 20px;
        border: 1px solid #bababa;
        border-radius: 3px;
        font-size: 20px;
        min-height: 215px;
    }
</style>

